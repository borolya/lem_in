NAME = visual
CC = cc -Wall -Wextra -Werror -g
SRC = visual-hex.c \
			check.c \
			draw.c \
			rb_tree.c \
			read.c \
			read_data.c \
			read_room.c \
            main.c
INCLUDES = -I . \
			-I ./libft/includes/ \
			-I ./minilibx_macos
OBJ_LIST = $(SRC:.c=.o)
OBJ_DIR = obj/
OBJ = $(addprefix $(OBJ_DIR), $(OBJ_LIST))

LIB = ./libft/libft.a\
	./minilibx_macos/mlx.a

all: $(NAME)

$(NAME): $(LIB) $(OBJ_DIR) $(OBJ)
	$(CC) -o $(NAME) $(OBJ) $(INCLUDES) -L ./libft/ -lft -L ./minilibx_macos/ -lmlx -framework OpenGL -framework AppKit

$(LIB):
	make -C ./minilibx_macos
	make -C ./libft

$(OBJ_DIR):
	mkdir -p $(OBJ_DIR)

$(OBJ_DIR)%.o: %.c lemin.h
	$(CC) -c $< $(INCLUDES)  -o $@

clean:
	make -C ./minilibx_macos clean
	make -C ./libft fclean
	rm -rf $(OBJ_DIR)

fclean: clean
	make -C ./minilibx_macos fclean
	make -C ./libft fclean
	rm -rf $(NAME)

re: fclean all
